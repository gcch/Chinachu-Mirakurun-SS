ProjectName="chinachu-mirakurun-ss"

Prefix="/usr/local"
LibDir="${Prefix}/lib/${ProjectName}"
ChinachuApiCountConnection="${LibDir}/chinachu-api-count-connection"
ChinachuApiGetTopReserveTime="${LibDir}/chinachu-api-get-top-reserve-time"
ChinachuApiIsRecording="${LibDir}/chinachu-api-is-recording"
