PowerSleepScript="${LibDir}/chinachu-mirakurun-sleep"
ShiftToSleep="${LibDir}/sleepcmd"

EtcDir="${Prefix}/etc/${ProjectName}"
ConfigFile="${EtcDir}/config"
CompListFile="${EtcDir}/components"

CronDir="/etc/cron.d"
CronScript="${CronDir}/${ProjectName}-cron"

PmUtilsScript="/etc/pm/sleep.d/81${ProjectName}"
SystemdScript="/usr/lib/systemd/system-sleep/${ProjectName}"

